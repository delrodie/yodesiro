{{ form_start(form,{'attr':{'class':"commande-form clear form-field-wrapper"}}) }}
    <div class="form-group">
        {{ form_widget(form.nom) }}
    </div>
    <div class="form-group">{{ form_widget(form.tel) }}</div>
    <div class="form-group">{{ form_widget(form.adresse) }}</div>
    <div class="form-group">{{ form_widget(form.email) }}</div>
    <div class="form-group">{{ form_widget(form.quantite) }}</div>
    {{ form_widget(form) }}
    <button class="btn btn-color">{{ button_label|default('Valider') }}</button>
{{ form_end(form) }}
