<div class="page" id="commande">
    <div class="container align-center">

        <!-- TITEL -->
        <div class="row title-wrapper">
            <div class="col-md-12 title">
                <h1 class="hd" style="color: white">Formulaire de commande</h1>
                <span class="separator"><span></span></span>
                <p style="color: white; font-size: 2.4rem;">Le coût unitaire du CD est 5.000 FCFA</p>
            </div>
        </div>

        <!-- SUBSCRIBE-FORM -->
        <div class="commande">
            <form id="notifyMe" class="commande-form clear form-field-wrapper" method="POST" action="confirmation.html">
                <div class="form-group">
                    <input type="text" class="form-control" name="identite" placeholder="Nom & prénoms">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="contact" placeholder="Contact">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="adresse" placeholder="Adresse géographique">
                </div>
                <div class="form-group">
                    <input type="email" class="form-control" name="email" placeholder="Adresse email">
                </div>
                <div class="form-group">
                    <input type="number" class="form-control" name="nombre" placeholder="Nombre de CD">
                </div>

                <button type="submit" class="btn btn-color">
                    Commander
                </button>
            </form>
        </div>

    </div>
</div>

<script>
    $("#notifyMe #submit").on( "click", function() {
        "use strict";
        $("#notifyMe").notifyMe();
        $("#notifyMe .error-text").delay(2000).fadeOut(2000);
    });
</script>
